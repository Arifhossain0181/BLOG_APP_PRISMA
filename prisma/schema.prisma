generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Post {
  id         String     @id @default(uuid())
  title      String     @db.VarChar(255)
  content    String?
  thumbail   String?    @db.VarChar(255)
  isFeatured Boolean    @default(false)
  status     PostStatus @default(PUBLISHED)
  tags       String[]
  view       Int        @default(0)
  authorId   String   //better auth 
  comments   Comments[]
  updatedAt  DateTime   @updatedAt
  createdAt  DateTime   @default(now())

  @@index([authorId])
  @@map("posts")
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model Comments {
  id        String        @id @default(uuid())
  content   String        @db.VarChar(500)
  authorId  String      //better auth
  postId    String
  post      Post          @relation(fields: [postId], references: [id])
  ParentsId String? 
  Parent    Comments?     @relation("CommentReplies", fields: [ParentsId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  replies   Comments[]    @relation("CommentReplies")
  
  status    CommentStatus @default(APPROVED)
  updatedAt DateTime      @updatedAt
  createdAt DateTime      @default(now())

  @@index([postId])
  @@index([authorId])
  @@map("comments")
}

enum CommentStatus {
  DRAFT
  APPROVED
  REJECTED
}
